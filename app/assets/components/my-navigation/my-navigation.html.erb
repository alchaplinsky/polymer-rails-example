<%= html_import_tag 'polymer/polymer.html' %>

<polymer-element name="my-navigation">
  <template>
    <style>
      :host {
        display: block;
      }
      .navigation {
        list-style: none;
        margin: 0;
        background: #fff;
      }
      .navigation li {
        display: inline-block;
      }
      .navigation li a {
        display: inline-block;
        font-size: 12px;
        padding: 15px 25px 13px 25px;
        color: #777;
        text-transform: uppercase;
        text-decoration: none;
        background: #fff;
        transition: background .4s ease;
      }
      .navigation li a:hover {
        background: #f7f7f7;
      }
    </style>

    <ul class="navigation">
      <li><a href="/">Home</a></li>
      <li><a href="/">Contacts</a></li>
      <li><a href="/">Blog</a></li>
      <li><a href="/">Twitter</a></li>
      <li><a href="/">Facebook</a></li>
    </ul>
  </template>

  <script type="text/javascript">
    Polymer('my-navigation', {
      ready: function() {  }
    });
  </script>
</polymer-element>
